


// own solution
public double findMaxAverage(int[] nums, int k) {
        int sum = 0;
        for(int i = 0; i < k; i++){
            sum = sum + nums[i];
        }
        double averageSum = sum/(double)k;
        double max = averageSum;

        int a = 0;
        int b = k;
        while(b < nums.length){

            sum = sum - nums[a++];
            sum = sum + nums[b++];

            averageSum = sum / (double)k;

            max = Math.max(max, averageSum);


        }
        return max;
    }
